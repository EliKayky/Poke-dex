<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f5f5f5;
        color: #333;
        font-family: "Quicksand", sans-serif;
        font-size: 1rem;
        font-weight: 400;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }

      .card {
        background-color: #fff;
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .card-header {
        background-color: #ff4757;
        color: #fff;
        font-size: 1.5rem;
        font-weight: 600;
        border-radius: 0.75rem 0.75rem 0 0;
        padding: 15px;
      }

      .card-title {
        font-size: 1.25rem;
        font-weight: 500;
        color: #ff4757;
        margin-bottom: 1rem;
      }

      .btn-back {
        background-color: #ff4757;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 0.5rem;
        font-size: 1rem;
      }

      .btn-back:hover {
        background-color: #ff6b81;
        color: #fff;
      }

      .details-section {
        margin-bottom: 1.5rem;
      }

      .moves-list,
      .abilities-list,
      .status-list {
        padding-left: 0;
        list-style-type: none;
        margin-bottom: 0;
      }

      .moves-list {
        column-count: 2;
        column-gap: 1rem;
      }

      .moves-list li,
      .abilities-list li {
        text-transform: capitalize;
        margin-bottom: 0.5rem;
      }

      .status-list li {
        text-transform: uppercase;
        margin-bottom: 1rem;
      }

      .poke-id {
        font-size: 1.25rem;
        font-weight: 600;
      }

      h1 {
        text-transform: capitalize;
        font-size: 2rem;
        font-weight: 600;
        color: #ff4757;
      }

      .pokemon-image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto 20px;
        border-radius: 0.5rem;
      }

      .progress {
        height: 1.25rem;
        background-color: #e9ecef;
        border-radius: 0.5rem;
      }

      .progress-bar {
        background-color: #ff4757;
      }

      .status-list {
        margin-bottom: 2rem;
      }

      .status-list li {
        margin-bottom: 10px;
      }
    </style>
    <title><%= pokemon.name %> - Detalhes</title>
  </head>
  <body>
    <div class="container py-5">
      <h1 class="text-center mb-4"><%= pokemon.name %> - Detalhes</h1>

      <img
        class="pokemon-image"
        src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/<%= pokemon.id %>.png"
        alt="<%= pokemon.name %>"
      />

      <div class="card mb-4">
        <div class="card-header">Informações do Pokémon</div>
        <div class="card-body">
          <p class="poke-id">ID: <%= pokemon.id %></p>

          <div class="row">
            <div class="col-md-6 details-section">
              <h5 class="card-title">Habilidades:</h5>
              <ul class="abilities-list">
                <% pokemon.abilities.forEach(ability => { %>
                <li><%= ability.ability.name %></li>
                <% }) %>
              </ul>
            </div>

            <div class="col-md-6 details-section">
              <h5 class="card-title">Status:</h5>
              <ul class="status-list">
                <% pokemon.stats.forEach(stat => { %>
                <li>
                  <%= stat.stat.name %>:
                  <div class="progress">
                    <div
                      class="progress-bar"
                      role="progressbar"
                      style="width: <%= stat.base_stat %>%"
                      aria-valuenow="<%= stat.base_stat %>"
                      aria-valuemin="0"
                      aria-valuemax="100"
                    >
                      <%= stat.base_stat %>
                    </div>
                  </div>
                </li>
                <% }) %>
              </ul>
            </div>
          </div>

          <div class="details-section">
            <h5 class="card-title">Movimentos:</h5>
            <ul class="moves-list">
              <% pokemon.moves.map((move) => move.move.name).sort().forEach((move) => { %>
              <li><%= move %></li>
              <% }) %>
            </ul>
          </div>

          <a href="/" class="btn btn-back">Voltar à lista</a>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
